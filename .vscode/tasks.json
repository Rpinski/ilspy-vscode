{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All",
            "dependsOn": [
                "Build Backend",
                "Build Extension"
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Build Backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Publish Backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/backend/src/ILSpy.Backend/ILSpy.Backend.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Watch Backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/backend/src/ILSpy.Backend/ILSpy.Backend.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build VSIX",
            "command": "nuke",
            "type": "process",
            "args": [
                "vsix",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Extension",
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/vscode-extension"
            },
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
            }
        },
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/vscode-extension"
            },
            "presentation": {
                "reveal": "never"
            },
        }
    ]
}